extends ../layouts/main-layout.pug

block main 
    include ../includes/main.pug

block navbar
    include ../includes/navbar.pug

block content

    section.page-header
    .container
        .row
        .col-md-12
            .content
                h1.page-name ADMIN ORDERS
                hr
    .container
        .row
            .col-md-12
                .dashboard-wrapper.user-dashboard

                    if orders.length > 0
                        .table-responsive
                            table.table
                                thead
                                    tr
                                        th Product Image 
                                        th Product Name 
                                        th Price
                                        th isPayment
                                        th Buyer User
                                tbody 

                                    each order in orders 
                                        tr 
                                            td 
                                                img(src=`/projectImages/${order.productImg}` width='80')
                                            td #{order.productName}
                                            td #{order.productCurrentBid}

                                            if order.isPayment === false 
                                                td 
                                                    span.label.label-primary Processing
                                            else 
                                                td 
                                                    span.label.label-success Completed
                                            td
                                                a.btn.btn-main.btn-small.btn-round(href=`/admin/buyer_user/${order.buyerUserId}`) Information
                    else 
                        h1 No Orders
