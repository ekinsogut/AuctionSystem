extends ../layouts/main-layout.pug

block content
    section.signin-page.account
        .container
            .row
                .col-md-6.col-md-offset-3
                    .block.text-center

                        a.logo(href='/')
                            |   AUCTION

                        h2.text-center Edit Product

                        form.text-left.clearfix(action='/admin/products' method="POST" enctype="multipart/form-data")
                            input(type="hidden" name="_csrf" value=`${csrfToken}`)
                            input(type="hidden" name="id" value=`${product._id}`)

                            .text-center
                                .form-group
                                    img(src=`/projectImages/${product.imageUrl}` width="150" height="150" )
                                    hr
                                    input.form-control-file(type="file" name="image")

                            .form-group
                                input.form-control(type='text' placeholder='Product Name' name="name" value=`${product.name}`)
                            .form-group
                                input.form-control(type='text' placeholder='Product Description' name="description" value=`${product.description}`)
                            .form-group
                                input.form-control(type='text' placeholder='Start Bid' name="start_bid" value=`${product.start_bid}`)
                            .form-group
                                input.form-control(type='text' placeholder='Sale Price' name="sale_price" value=`${product.sale_price}`)
                            .form-group
                                input.form-control(type='text' placeholder='Last Date - Ex: "April 19, 2021 00:00:00"' name="last_date" value=`${product.last_date}`)
                            .form-group 
                                each category in categories 
                                    
                                    input.form-control(type="checkbox" name="categoryids" value=`${category._id}` checked=category.selected)
                                    | #{category.name}
                                    br
                            hr
                            .text-center
                            button.btn.btn-main.text-center(type='submit') Edit