extends ../layouts/main-layout.pug

block content
    section.signin-page.account
        .container
            .row
                .col-md-6.col-md-offset-3
                    .block.text-center

                        a.logo(href='/')
                            |   AUCTION

                        h2.text-center Reset Password

                        form.text-left.clearfix(action='/reset-password' method="POST")
                            input(type="hidden" name="_csrf" value=`${csrfToken}`)
                            .form-group
                                input.form-control(type='email' placeholder='Email' name="email")
                            .text-center
                            button.btn.btn-main.text-center(type='submit') Reset Password

                        hr

                        if errorMessage 
                            div.alert.alert-warning.alert-common(role='alert')
                                span
                                | !{errorMessage}
